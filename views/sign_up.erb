<div class="container">
    <h1>SIGN-UP</h1>
    <form action="/signup" method="post" class="col-lg-5">
        <div class="controls">
            <div class="form-group">
                <input type="text" name="name" placeholder="名前を入力" class="form-control input-lg"><br>
                <input type="password" name="password" placeholder="パスワードを入力" class="form-control input-lg"><br>
                <input type="password" name="password_confirmation" placeholder="確認用" class="form-control input-lg"><br>
                <input type="email" name="email" placeholder="メールアドレスを入力" class="form-control input-lg">
            </div>
            <div class="form-group col-lg-4">
                <input type="submit" value="登録" class="form-control col-lg-4">
            </div>
        </div>
    </form>
</div>