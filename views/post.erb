
<div class="row">
    <div class="col-lg-6" id="panels">
        <div class="panel panel-default" id="panel">
                <div class="panel-heading">
                    <span class="glyphiicon glyphiicon-triangle-right"></span>
                </div>
                <div class="panel-body">
                    <form action="/new" method="post">
                        <h2>タイトル(20文字まで)</h2>
                        <% if @title.empty? %>
                            <input type="text" required placeholder="タイトルを入力" name="title" maxlength="20" size="20">
                        <% else %>
                            <input type="text" required name="title" maxlength="20" size="20" value="<%= @title %>">
                        <% end %>
                        <br>
                        <h2>口コミ本文</h2>
                        <textarea required="required" placeholder="本文を入力" name="content"></textarea><br>
                        <h2>本リンク</h2>
                        <input type="url" placeholder="紹介ページURLを入力" name="url"><br>
                        <input type="reset">
                        <input type="submit">
                    </form>
                </div>
        </div>
    </div>
    <div>

</div>
